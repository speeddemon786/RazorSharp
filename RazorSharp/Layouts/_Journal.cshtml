<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="@Page.mKeywords"/>
    <meta name="description" content="@Page.mDescription"/>
    <meta name="author" content="@App.SiteName">
    <title>@Page.mTitle</title>
    <!-- Bootstrap Core CSS -->
    <link href="@StaticFile.Version("~/Layouts/Journal/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="@StaticFile.Version("~/Layouts/BootStrap/css/style.css")" rel="stylesheet">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- jQuery -->
    <script src="@StaticFile.Version("~/Layouts/Journal/js/jquery.min.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="@StaticFile.Version("~/Layouts/Journal/js/bootstrap.min.js")"></script>
</head>
<body>
<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Href("~/")">@App.SiteName</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            @Html.Raw(Helpers.Menu("nav navbar-nav", "topnav"))
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>
<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-lg-8">
            <!-- Top Widget Area-->
            @RenderSection("Top", false)
            <!-- Main Content -->
            @RenderBody()
            @RenderSection("Center", false)
            <!-- Lower Widget Area-->
            @RenderSection("Bottom", false)
        </div>
        <!-- Blog Sidebar Widgets Column -->
        <div class="col-lg-4">
            <!-- Right Widget Area -->
            @RenderSection("Right", false)
        </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                @Html.Raw(Helpers.FooterCopyright())
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>
</div>
<!-- /.container -->
@Html.Raw(App.SiteAnalytics)
</body>
</html>