@{
    var message = string.Empty;

    var data = Enumerable.Empty<dynamic>();
    var sqlSelect = string.Empty;
    using (var db = Database.Open(Functions.GetDbName()))
    {
        sqlSelect = "Select * From Widgets Where wName = 'site-search'";
        data = db.Query(sqlSelect);
    }
    if (data.Count() == 0)
    {
        Response.Redirect("~/Admin/Search/Install");
    }
}
@section Scripts {

}
@section Menu{
    @RenderPage("~/Admin/_Menu.cshtml")
}
@Html.Raw(message)
<form method="post" action="">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Search Settings</h2>
            <p>Below are the steps required to add search functionality to your site</p>
            <ol>
                <li>Add the search widget to either the widget bar or any other widget area on your theme</li>
                <li>Create a new page called "Results" and leave the "Render Body" check box unticked</li>
                <li>Add the search results widget to the main content area of the page if your theme allows</li>
            </ol>
            <p>Should you have any issues with this widget simply contact our support team for assistance</p>
        </div>
    </div>
</form>